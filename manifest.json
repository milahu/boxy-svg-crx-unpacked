{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Boxy SVG",
  "description": "Vector graphics editor. Generates clean SVG files. Works on Mac, Linux, Windows and ChromeOS.",
  "version": "2.4.1",
  "author": "Jaros≈Çaw Foksa",
  "manifest_version": 2,
  "minimum_chrome_version": "47",
  "offline_enabled": true,
  "icons": {
    "512": "images/logo.png"
  },
  "app": {
    "background": {
      "page": "background.html"
    }
  },
  "webview": {
    "partitions": [
      {
        "name": "boxy",
        "accessible_resources": ["*"]
      }
    ]
  },
  "file_handlers": {
    "svg":  { "extensions": ["svg"]  },
    "svgz": { "extensions": ["svgz"] },
    "html": { "extensions": ["html"] }
  },
  "permissions": [
    "alwaysOnTopWindows",
    "browser",
    "webview",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    {
      "fileSystem": ["write", "retainEntries"]
    }
  ]
}